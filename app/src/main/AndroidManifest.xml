<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.whiff.whiff">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.HomePage.HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RootScanner.UI.RootScanner"
            android:label="RootScanner"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".NonRootScanner.UI.NonRootScanner"
            android:label="@string/title_activity_non_root_scanner"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ARPSpoofer.UI.ARPSpoofer"
            android:label="ARPSpoofer"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".ARPSpoofer.ARPSpoofService"
            android:exported="false" />

        <activity
            android:name=".UI.HomePage.WEPCrack"
            android:label="@string/title_activity_wepcrack"
            android:theme="@style/AppTheme" />
        <activity android:name=".help" />

        <service
            android:name=".RootScanner.TCPdumpService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_vpn"
            android:label="@string/navigation_drawer_root_packet_capture" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
        </activity>
		
        <activity
            android:name=".UI.PacketFile.PacketFilePage"
            android:parentActivityName=".NonRootScanner.UI.NonRootScanner"
            android:label="@string/title_activity_packetfile_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.PacketFileContent.PacketFileContentPage"
            android:parentActivityName=".UI.PacketFile.PacketFilePage"
            android:label="@string/title_activity_packetfile_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.PacketDb.PacketDbPage"
            android:parentActivityName=".NonRootScanner.UI.NonRootScanner"
            android:label="@string/title_activity_packetdb_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.PacketDbContent.PacketDbContentPage"
            android:parentActivityName=".UI.PacketDb.PacketDbPage"
            android:label="@string/title_activity_packetdb_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UI.ImportPacketFile.ImportPacketFilePage"
            android:parentActivityName=".NonRootScanner.UI.NonRootScanner"
            android:label="@string/title_activity_import_packetfile_page"
            android:theme="@style/AppTheme" />

        <!-- Packet Capture (All) -->
        <service
            android:name="org.jnetpcap.PcapService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>
        <!-- Packet Capture (TCP/UDP) -->
        <service
            android:name=".NonRootScanner.PacketCaptureService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>
		
    </application>

</manifest>